model Hostel {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  city             String
  location         String
  contact          String
  hostelType       String // "PG", "Dormitory", "Shared", "Private", "Boys PG", "Girls PG"
  availableFor     Int      @default(0)
  availableRooms   Int      @default(0)
  price            Float
  ratings          Float    @default(0.0) // Average rating from reviews
  deposit          Float? // Security deposit amount
  direction        String?
  videos           String?
  amenities        String[] // WiFi, AC, Geyser, etc.
  roomTypes        String[] // "Single", "Double", "Triple Sharing"
  services         String[] // Laundry, housekeeping, food, etc.
  securityFeatures String[] // CCTV, biometric access, security guard
  nearbyFacilities String[] // Hospitals, markets, transport, gym, etc.
  photos           String[]
  isActive         Boolean  @default(true)

  // ENUM
  postedBy Role @default(ADMIN)

  // RELATIONSHIP
  reviews  HostelReview[] @relation("HostelReviews")
  // RELATIONSHIP
  lister   User           @relation(fields: [listerId], references: [id], name: "UserHostels", onDelete: Cascade)
  listerId String         @db.ObjectId

  // TIMESTAMPS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([updatedAt])
  @@map("Hostels")
}

model HostelReview {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  rating  Float
  comment String

  // RELATIONSHIP
  user     User   @relation(fields: [userId], references: [id], name: "UserHostelReviews", onDelete: Cascade)
  userId   String @db.ObjectId
  // RELATIONSHIP 
  hostel   Hostel @relation(fields: [hostelId], references: [id], name: "HostelReviews", onDelete: Cascade)
  hostelId String @db.ObjectId

  // TIMESTAMPS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([updatedAt])
  // @@index([roomId])
  @@map("Hostel_Reviews")
}

model InterestedHouseProperties {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  sellerId String

  // RELATIONSHIP
  propertyId   String                           @unique @db.ObjectId
  property     PropertyHouse                    @relation(fields: [propertyId], references: [id], name: "InterestedHouse", onDelete: Cascade)
  // RELATIONSHIP
  interestedBy InterestedHousePropertiesUsers[] @relation("InterestedHouses")

  @@index([sellerId])
}

model InterestedHousePropertiesUsers {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // RELATIONSHIP
  user             User                      @relation(name: "InterestedHouseUsers", fields: [userId], references: [id], onDelete: Cascade)
  userId           String                    @db.ObjectId
  // RELATIONSHIP
  interestedRoom   InterestedHouseProperties @relation(name: "InterestedHouses", fields: [interestedRoomId], references: [id], onDelete: Cascade)
  interestedRoomId String                    @db.ObjectId

  // TIMESTAMPS
  createdAt DateTime @default(now())

  @@unique([userId, interestedRoomId])
  @@index([userId])
  @@index([createdAt])
  @@index([interestedRoomId])
}

model InterestedLandProperties {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  sellerId String

  // RELATIONSHIP
  propertyId   String                          @unique @db.ObjectId
  property     PropertyLand                    @relation(fields: [propertyId], references: [id], name: "InterestedProperty", onDelete: Cascade)
  // RELATIONSHIP
  interestedBy InterestedLandPropertiesUsers[] @relation("InterestedLands")

  @@index([sellerId])
}

model InterestedLandPropertiesUsers {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  // RELATIONSHIP
  user             User                     @relation(name: "InterestedLandUsers", fields: [userId], references: [id], onDelete: Cascade)
  userId           String                   @db.ObjectId
  // RELATIONSHIP
  interestedLand   InterestedLandProperties @relation(name: "InterestedLands", fields: [interestedLandId], references: [id], onDelete: Cascade)
  interestedLandId String                   @db.ObjectId

  // TIMESTAMPS
  createdAt DateTime @default(now())

  @@unique([userId, interestedLandId])
  @@index([userId])
  @@index([createdAt])
  @@index([interestedLandId])
}

model PropertyHouse {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  area           Int
  price          Float
  title          String
  city           String
  location       String
  ownerContact   String
  primaryContact String
  video          String?
  direction      String?
  description    String?
  photos         String[]
  nearbyAreas    String[] // School, Hospital, Metro, Market, etc.
  available      Boolean  @default(true)
  isActive       Boolean  @default(true)
  // HOUSE
  floors         Int?
  bedrooms       Int?
  kitchens       Int?
  bathrooms      Int?
  builtUpArea    Int?
  amenities      String[] // Parking, Lift, Power Backup, Security, etc.
  // ONLY SELLER CAN VIEW
  documents      String[]
  // ADMIN WORK
  verified       Boolean  @default(false)
  // ENUM
  postedBy       Role

  // RELATIONSHIP 
  seller             User                       @relation(fields: [sellerId], references: [id], name: "UserHousePorperties", onDelete: Cascade)
  sellerId           String                     @db.ObjectId
  // // RELATIONSHIP
  interestedProperty InterestedHouseProperties? @relation(name: "InterestedHouse")

  // TIMESTAMPS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([city])
  @@index([sellerId])
  @@index([isActive])
  @@index([updatedAt])
  @@index([city, location])
  @@map("Houses")
}

model PropertyLand {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  area           Int
  price          Float
  title          String
  city           String
  location       String
  ownerContact   String
  primaryContact String
  video          String?
  direction      String?
  description    String?
  photos         String[]
  nearbyAreas    String[] // School, Hospital, Metro, Market, etc.
  available      Boolean  @default(true)
  isActive       Boolean  @default(true)
  // LAND
  plotWidth      Int?
  plotLength     Int?
  // ONLY SELLER CAN VIEW
  documents      String[]
  // ADMIN WORK
  verified       Boolean  @default(false)
  // ENUM
  postedBy       Role

  // RELATIONSHIP 
  seller             User                      @relation(fields: [sellerId], references: [id], name: "UserLandPorperties", onDelete: Cascade)
  sellerId           String                    @db.ObjectId
  // RELATIONSHIP
  interestedProperty InterestedLandProperties? @relation(name: "InterestedProperty")

  // TIMESTAMPS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([city])
  @@index([sellerId])
  @@index([isActive])
  @@index([updatedAt])
  @@index([city, location])
  @@map("Lands")
}

enum Transmission {
  Manual
  Automatic
}

model Vehicle {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  model           String
  numberPlate     String   @unique
  color           String?
  year            Int?
  mileage         Float?
  fuelType        String?
  seatingCapacity Int?
  price           Float?
  videos          String?
  photos          String[]
  condition       String?
  available       Boolean  @default(true)
  isActive        Boolean  @default(true)

  // ENUM
  postedBy     Role         @default(ADMIN)
  transmission Transmission

  // RELATIONSHIP 
  seller   User   @relation(fields: [sellerId], references: [id], name: "UserVehicles", onDelete: Cascade)
  sellerId String @db.ObjectId

  // TIMESTAMPS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([updatedAt])
  @@map("Vehicles")
}

model ReMarketItem {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String
  category       String // "Electronics", "Furniture", "Clothing", "Vehicles", etc.
  subCategory    String? // More specific type like "Laptop", "Smartphone", etc.
  condition      String // "New", "Used", "Refurbished", "Like New"
  price          Float
  isNegotiable   Boolean
  city           String
  location       String // City/Area where the item is listed
  ageInMonths    Int? // How old the item is (for Used/Refurbished items)
  quantity       Int
  warrantyPeriod Int? // Warranty duration in months (if available)
  postedBy       Role     @default(ADMIN)
  videos         String?
  photos         String[]
  isActive       Boolean  @default(true)
  available      Boolean  @default(true)

  // RELATIONSHIP 
  seller   User   @relation(fields: [sellerId], references: [id], name: "UserReMarketItems", onDelete: Cascade)
  sellerId String @db.ObjectId

  // TIMESTAMPS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([updatedAt])
  @@map("ReMarketItems")
}
